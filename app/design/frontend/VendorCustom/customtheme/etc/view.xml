<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd"
>
    <media>
        <images module="Magento_Catalog">
            <image id="product_page_image_medium" type="image">
                <width>900</width>
                <height>900</height>
            </image>
            <image id="product_page_main_image" type="image">
                <width>900</width>
                <height>900</height>
            </image>
            <image id="product_page_main_image_default" type="image">
                <width>900</width>
                <height>900</height>
            </image>
            <image id="product_page_image_small" type="thumbnail">
                <width>80</width>
                <height>80</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="allowfullscreen">false</var>
            <var name="navdir">vertical</var><!-- Sliding direction of thumbnails (horizontal/vertical) -->
        </var>
    </vars>
</view>
